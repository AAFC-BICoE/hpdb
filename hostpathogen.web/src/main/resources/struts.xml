<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.action.extension" value=","/> 
    <constant name="struts.convention.action.mapAllMatches" value="true"/>
    <constant name="struts.convention.default.parent.package" value="rest-default"/>
    <constant name="struts.convention.package.locators" value="rest"/>
    <constant name="struts.custom.i18n.resources" value="global" />

<package name="HPDBServlet" extends="struts-default">		
<!-- action for the servlet -->
	
	<!-- Loading Form -->
	<action name="loadHPForm">
		<interceptor-ref name="cookie"></interceptor-ref>
		<interceptor-ref name="cookieProvider"></interceptor-ref>
		<interceptor-ref name="defaultStack"></interceptor-ref>
		<result name="success" type="redirect">/JSP/MainTest.jsp</result>
		<result name="notfound">/JSP/404.jsp</result>
	</action> 
	<!-- Press reset -->
	<action name="reset" 
		class="ca.gc.agr.mbb.hostpathogen.jspservlet.action.ResetAction"
		method="doReset">
		<result name="notfound">/JSP/404.jsp</result>
		<result name="success">/JSP/MainTest.jsp</result>
	</action>
	<!-- Press submit -->
	<action name="browse" 
		class="ca.gc.agr.mbb.hostpathogen.jspservlet.action.SearchAction"
		method="doSubmit">
		<result name="success">/JSP/ViewFormParam.jsp</result>
		<result name="notfound">/JSP/404.jsp</result>
	</action>
	<!-- Redirect to View Result Page1 -->
	<action name="viewRef" 
		class="ca.gc.agr.mbb.hostpathogen.jspservlet.action.ViewAction"
		method="view">
		<result name="success">/JSP/ViewFormParam.jsp</result>
		<result name="notfound">/JSP/404.jsp</result>
	</action>
	<!-- Redirect to View Result Page2 -->
	<action name="viewRef" 
		class="ca.gc.agr.mbb.hostpathogen.jspservlet.action.ViewAction"
		method="view">
		<result name="success">/JSP/ViewFormParam.jsp</result>
		<result name="notfound">/JSP/404.jsp</result>
	</action>
		<!-- Press on refId -->
	<action name="getref" 
		class="ca.gc.agr.mbb.hostpathogen.jspservlet.action.GetRefAction"
		method="getRef">
		<result name="notfound">/JSP/404.jsp</result>
		<result name="success">/JSP/MainTest.jsp</result>
	</action>
	</package>
</struts>
